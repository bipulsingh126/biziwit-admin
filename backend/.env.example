# Server
PORT=4000
CORS_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173

# MongoDB
MONGODB_URI=mongodb://localhost:27017/biziwit
# Optional explicit DB name (if using a cluster with multiple DBs)
# MONGODB_DB=biziwit

# Auth
JWT_SECRET=change_this_in_production
JWT_EXPIRES_IN=7d

# Seed (optional) - on startup will create an admin if not exists
# Leave blank to disable seeding
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123

# Uploads
UPLOAD_DIR=uploads

# Payments - Stripe
# Get these from Stripe dashboard
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Payments - PayPal
# PAYPAL_ENV can be 'sandbox' or 'live'
PAYPAL_ENV=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email (SMTP) for notifications
# If not set, email notifications are disabled
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
# Sender and recipient defaults
MAIL_FROM="BiziWit Admin <no-reply@biziwit.local>"
NOTIFY_EMAIL=alerts@yourdomain.com

# Mailchimp (optional newsletter sync)
# MAILCHIMP_SERVER_PREFIX is like 'us21' from your API key
MAILCHIMP_API_KEY=
MAILCHIMP_SERVER_PREFIX=
MAILCHIMP_LIST_ID=
